root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
# The reason why this setting is set
# http://stackoverflow.com/questions/729692/why-should-text-files-end-with-a-newline
insert_final_newline = true

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[tsconfig.json]
indent_size = 4
